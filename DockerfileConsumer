FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
USER app
WORKDIR /consumerapp
EXPOSE 8080

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /consumerapp
COPY ["./src/TechChallange.Fase3.Consumer/TechChallange.Fase3.Consumer.csproj", "TechChallenge.Fase3.Consumer/"]
COPY . .
WORKDIR "/consumerapp/src/TechChallenge.Fase3.Consumer"


RUN dotnet build "./TechChallenge.Fase3.Consumer.csproj" -c $BUILD_CONFIGURATION -o /consumerapp/build

FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "./TechChallenge.Fase3.Consumer.csproj" -c $BUILD_CONFIGURATION -o /consumerapp/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /consumerapp
COPY --from=publish /consumerapp/publish .
ENTRYPOINT ["dotnet", "TechChallenge.Fase3.Consumer.dll"]
